{
  "version": 2,
  "name": "grant-writing-platform",
  "builds": [
    {
      "src": "packages/web/src/frontend/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/web/dist/frontend"
      }
    },
    {
      "src": "packages/web/src/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/web/src/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/web/dist/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "packages/web/src/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}